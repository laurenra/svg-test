{
  "compilerOptions": {
    "outDir": "./src/js",
    "module": "es2015",
    "target": "es2016",
    "sourceMap": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
